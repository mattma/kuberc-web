<section class="js-notification">
  <div class='notification-info-icon'>
    {{#if (eq message.type "error")}}
      {{fa-icon "exclamation-triangle"}}
    {{else if (eq message.type "success")}}
      {{fa-icon "check"}}
    {{/if}}
  </div>
  <span class="notification-message">
    {{{message.message}}}
  </span>
  <button class="close" {{action "closeNotification"}}>
    {{fa-icon "times"}}
  </button>
</section>
